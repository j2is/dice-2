{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "serviceworker": true
  },
  "parser": "babel-eslint",
  "extends": ["airbnb-base"],
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "require": true,
    "app": true,
    "module": true
  },
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "linebreak-style": ["error", "unix"],
    "no-unused-vars": ["warn"],
    "indent": ["warn", 2],
    "semi": ["error", "always"],
    "one-var-declaration-per-line": ["error", "initializations"],
    "no-console": 0,
    "no-debugger": 0,
    "comma-dangle": [
      "error",
      {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "ignore"
      }
    ],
    "compat/compat": "error"
  }
}
